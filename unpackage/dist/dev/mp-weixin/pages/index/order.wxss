.orderType {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	padding: 0 30rpx;
	position: fixed;
	top: 0rpx;
	width: 100%;
	height: 100rpx;
	background: #FFFFFF;
	z-index: 999;
}
.orderType ._div {
	font-size: 26rpx;
	margin-left: 30rpx;
	width: 104rpx;
	padding: 21rpx 23rpx 10rpx;
	border-bottom: 8rpx solid #DADADA;
	text-align: center;
	color: #000000;
}
.orderType ._div:first-child {
	margin-left: 0;
}
.orderType ._div.active {
	color: #FEC300;
	border-color: #FEC300;
}
.orderInf {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	position: fixed;
	bottom: 10rpx;
	top: 140rpx;
	width: 100%;
}
.order-left{
	position: fixed;
	left: 0rpx;
