
.setinput{
	padding: 0 30rpx;
}
.setinput>._div>._span,.setinput>._div>input,.setinput>._div>textarea{
	font-size: 24rpx;
	line-height: 80rpx;
	min-height: 80rpx;
	margin-top: 20rpx;
	height: 80rpx;
}
.setinput>._div>input,.setinput>._div>textarea{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}
.setinput>._div{
	border-bottom: 1px solid #C8C8C8;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.setinput>._div>._span{
	width: 150rpx;
}
.setinput>._div>textarea{
	width: 500rpx;
	margin-top: 38rpx;
	line-height: 40rpx;
}
.setinput>._div>input{
	width: 300rpx;
}
.submit{
	background: #F6C11B;
	color: white;
	line-height: 80rpx;
	text-align: center;
	border-radius: 10rpx;
	font-size: 28rpx;
	position: relative;
	margin-top: 60rpx;
}
.xieyi{
	padding: 40px 0;
}
.xieyi ._span{
	display: inline-block;
	vertical-align: top;
	margin-right: 10rpx;
	line-height: 30rpx;
	font-size: 24rpx;
}
.xieyi ._span:first-child{
	width: 28rpx;
	height: 28rpx;
	border-radius: 10rpx;
	border: 1px solid #5d5c5c;
	color: white;
	text-align: center;
	font-size: 20rpx;
	line-height: 28rpx;
}
.xieyi .active{
	color: #F6C11B!important;
	border: 1px solid #F6C11B!important;
}
.xieyi ._span:last-child{
	color: #F6C11B;
}
.getcode{
	float: right;
	color: #F6C11B;
	width: 200rpx;
	text-align: center;
	border-left: 1px solid #C8C8C8;
	height: 30rpx;
	line-height: 30rpx;
	margin-top: 45rpx;
	min-height: 30rpx;
	font-size: 24rpx;
}
.tip{
	line-height: 60rpx;
	text-align: right;
	font-size: 24rpx;
}
._p{
	position: relative;
	height: 80rpx;
}

