
.userinf {
	padding: 0 30rpx;
}
.userinf ._h1 {
	font-size: 30rpx;
	line-height: 60rpx;
	width: 200rpx;
	color: white;
	background: #FEC300;
	border-radius: 10rpx;
	text-align: center;
	margin-top: 30rpx;
	margin-bottom: 44rpx;
	-webkit-box-shadow: 0 4px 0 #CCCCCC;
	        box-shadow: 0 4px 0 #CCCCCC;
}
.type ._div {
	display: inline-block;
	vertical-align: top;
	width: 25%;
}
.type ._div image,
.type ._div ._span {
	display: inline-block;
	vertical-align: top;
	font-size: 24rpx;
	line-height: 40rpx;
}
.type ._div image {
	width: 40rpx;
	height: 40rpx;
	margin-right: 10rpx;
	margin-bottom: 30rpx;
}
.inf {
	font-size: 24rpx;
	line-height: 30rpx;
	margin-top: 30rpx;
}
.inf>._div {
	margin-bottom: 30rpx;
}
.inf>._div ._div,
.inf>._div ._span {
	display: inline-block;
	vertical-align: top;
}
.inf>._div>._span {
	width: 104rpx;
}
.inf>._div ._div {
	width: 340rpx;
	border: 1px solid #5d5c5c;
	height: 30rpx;
	margin-left: 70rpx;
	padding: 0 10rpx;
}
.inf>._div ._div image {
	width: 20rpx;
	height: 20rpx;
	float: right;
	margin-top: 5rpx;
}
.inf>._div ._div input {
	width: 100%;
	height: 30rpx;
	line-height: 30rpx;
	font-size: 24rpx;
	min-height: 30rpx;
}
.tip {
	text-align: center;
	font-size: 24rpx;
	color: #999999;
	line-height: 60rpx;
	margin-top: 20rpx;
}
.apply {
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 100rpx;
	text-align: center;
}
.apply ._div {
	height: 100rpx;
	line-height: 100rpx;
	color: white;
	background: #FEC300;
	font-size: 28rpx;
	margin-left: 125rpx;
	margin-right: 125rpx;
}
.bg0 {
	background: #FEC200;
}
.server {
	padding: 0 30rpx;
	margin-top: 40rpx;
	font-size: 24rpx;
	margin-bottom: 20rpx;
}
.server ._p {
	text-align: center;
	line-height: 40rpx;
}
.server .active{
	color: #FEC200;
}
.server ._div {
	display: inline-block;
	vertical-align: top;
	margin-right: 30rpx;
}
.server ._div:nth-child(4n) {
	margin-right: 0;
}
.server ._div:nth-last-child(n+5) {
	margin-bottom: 30rpx;
}
.server image {
	width: 150rpx;
	height: 150rpx;
	border-radius: 10rpx;
}
.bggray {
	background: #e5e5e5;
	height: 40rpx;
}
.list>._div:last-child .bggray {
	display: none;
}

