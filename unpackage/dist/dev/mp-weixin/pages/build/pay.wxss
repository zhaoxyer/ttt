@import "../../common/vendor.wxss";

.floor,
.louceng {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  height: 60rpx;
  font-size: 24rpx;
}
.louceng ._input {
  border: 1rpx solid #999999;
  border-radius: 10rpx;
}
.floor view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.floor view view {
  margin-left: 30rpx;
}
.floor view view:nth-child(1) {
  width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  padding: 5rpx;
  border: 1rpx solid #999999;
}
.floor view view.active {
  background: #FEC200;
}
.carry {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  height: 60rpx;
  font-size: 24rpx;
}
.carry image,
.carry ._span {
  margin-left: 30rpx;
}
.carry image {
  width: 40rpx;
  height: 40rpx;
}
.adressli {
  padding: 30rpx;
  font-size: 26rpx;
  border-bottom: 1rpx solid #E5E5E5;
  line-height: 26rpx;
}
.adressli ._div>._div {
  display: inline-block;
}
.adressli>._div:nth-child(1) {
  font-size: 30rpx;
}
.adressli>._div:nth-child(2) {
  margin-bottom: 30rpx;
  margin-top: 25rpx;
}
.adressinf {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 24rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.adressinf image {
  width: 20rpx;
  height: 30rpx;
}
.adressinf ._div {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  line-height: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.adressinf ._div ._span {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  line-height: 30rpx;
}
.payinf {
  padding: 0 30rpx;
}
.payinf ._h1 {
  font-size: 28rpx;
  line-height: 80rpx;
}
.inff {
  height: 200rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.payinf>._div {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 24rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  line-height: 50rpx;
  width: 100%;
}
.payinf>._div image {
  width: 150rpx;
  height: 120rpx;
}
.payinf>._div ._div {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: right;
  overflow: hidden;
}
.payinf>._div ._div ._span:last-child {
  float: right;
}
.payinf>._div ._div ._p {
  display: inline-block;
  text-align: left;
  max-width: 460rpx;
  overflow: hidden;
}
.payinf>._div ._div ._p view {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.tip {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 0 30rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
}
.tip ._div:last-child {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  margin-left: 10rpx;
}
.apply {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background: white;
  line-height: 100rpx;
  font-size: 24rpx;
  z-index: 10;
}
.apply>._span:nth-child(1) {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.apply>._span:nth-child(1) ._span {
  color: #FEC200;
}
.apply>._span:nth-child(2) {
  width: 500rpx;
  background: #FEC200;
  text-align: center;
  color: white;
}
.time {
  border-bottom: 1rpx solid #E5E5E5;
  border-top: 1rpx solid #E5E5E5;
}
.time>._p {
  text-align: center;
}
.time>._p view {
  display: inline-block;
  vertical-align: top;
  text-align: center;
  line-height: 100rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
}
.time ._p view:nth-child(1) ._span:nth-child(2n+1) {
  color: #FEC200;
}
.sendtype {
  border-bottom: 1rpx solid #E5E5E5;
}
.sendtype ._p {
  padding: 10rpx 0;
  font-size: 24rpx;
}
.sendtype ._p ._span {
  display: inline-block;
  vertical-align: top;
  margin-right: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.sendtype ._p ._span:nth-child(1) {
  background: #999999;
  color: white;
  width: 200rpx;
  text-align: center;
  border-radius: 20rpx;
}
.sendtype ._p .active {
  background: #FEC200!important;
}
.remake,
.mingxi {
  border-bottom: 1rpx solid #E5E5E5;
}
.remake ._textarea {
  width: 100%;
  height: 150rpx;
  border: 1rpx solid #C9C9C9;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  font-size: 24rpx;
}
.bgheight {
  height: 120rpx;
}
.mingxi .mingxiinf {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  height: 180rpx;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  line-height: 50rpx;
  font-size: 24rpx;
}